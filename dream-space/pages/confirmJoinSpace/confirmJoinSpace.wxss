.user_info_area {
  position: relative;
  top: 0;
  width: 100%;
  height: 600rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 60rpx 0 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
  margin: 10rpx;
}

.userinfo-time{
  color: black;
  margin: 10rpx;
}

.btn_area {
  padding: 0 5%;
  width: 90%;
  height: 250rpx;
}

.submit_btn {
  position: absolute;
  width: 90%;
  height: 100rpx;
  background: #139bea;
  color: #fff;
  border-radius: 26rpx;
  margin-top: 150rpx;
  font-size: 36rpx;
  font-weight: 200;
}

.btn_hover {
  opacity: 0.7;
}