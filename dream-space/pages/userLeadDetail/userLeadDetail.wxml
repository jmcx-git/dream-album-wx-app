<import src="../../src/wetoast.wxml" />
<view wx:if="{{loadStatus}}" style="width:100%;height:{{windowHeight}}px;">
  <image hidden="{{!nomsgs}}" class="default_area_image" style="top:{{windowHeight*convertTimes/2-300}}rpx;" src="../../image/empty.png" />
</view>
<view wx:else>
  <view class="content">
    <view class="content_top_area">
      <text class="title">{{itemDetail.title}}</text>
      <text class="time_desc">{{itemDetail.time}}</text>
    </view>
    <view class="content_detail">
      <view id="{{idx}}" wx:for="{{itemDetail.content}}" wx:key="{{idx}}" wx:for-index="idx">
        <image hidden="{{item.imgUrl==null}}" class="content_detail_img" mode="aspectFill" src="{{item.imgUrl}}" />
        <view hidden="{{item.content==null||item.content==''}}" class="content_detail_text">
          <text>{{item.content}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class="customer">
    <contact-button type="default-light" size="27" session-from="dreamspace">
    </contact-button>
  </view>
</view>

<!-- wetoast -->
<template is="wetoast" data="{{...__wetoast__}}" />