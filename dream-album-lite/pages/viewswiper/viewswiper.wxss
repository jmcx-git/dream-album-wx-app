.hiddenNow{
    opacity: 0;
}
.css-half-show{
    opacity:0.5 !important;
}

.css-half-animation{
    -webkit-animation-name: hiddentoshowhalf;
    -webkit-animation-duration: 4s;
    animation-name: hiddentoshow;
    animation-duration: 4s;
}

@-webkit-keyframes hiddentoshowhalf{
    0% {opacity:0.1;}
    50% {opacity:1;}
    100% {opacity:0.5;}
}

@keyframes hiddentoshowhalf{
    0% {opacity:0.1;}
    50% {opacity:1;}
    100% {opacity:0.5;}
}

.css-animation{
    -webkit-animation-name: hiddentoshow;
    -webkit-animation-duration: 4s;
    animation-name: hiddentoshow;
    animation-duration: 4s;
}

@-webkit-keyframes hiddentoshow{
    0% {opacity:0.1;z-index:6}
    50% {opacity:1;z-index:6}
    100% {opacity:0.1;z-index:3}
}

@keyframes hiddentoshow{
    0% {opacity:0.1;z-index:6}
    50% {opacity:1;z-index:6}
    100% {opacity:0.1;z-index:3}
}

