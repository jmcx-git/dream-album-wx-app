.del_btn{
    position: absolute;
    width: 44rpx;
    height: 44rpx;
    top: -22rpx;
    left: -22rpx;
}

.music_marker{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    top: 10rpx;
    right: 10rpx;
}

.shake_animation {
  animation: shake 1.2s linear infinite;
}

@keyframes shake {
  0%, 100% {
    transform: rotate(1deg);
  }

  10%, 30%, 50%, 70%, 90% {
    transform: rotate(-1deg);
  }

  20%, 40%, 60%, 80% {
    transform: rotate(1deg);
  }
}